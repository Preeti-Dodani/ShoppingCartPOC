<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_height="200dp">


            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_launcher"
                android:padding="10dp"
                android:id="@+id/imageView3"

                />
        <!--<ToggleButton-->
            <!--android:id="@+id/toggleButton"-->

            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="95dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_gravity="right"-->
            <!--android:background="@drawable/heart_icon"/>-->

            <ImageView
                android:layout_weight="1"

                android:id="@+id/imageView2"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:background="@drawable/like"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                 />

                  </LinearLayout>
        <TextView
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/prod_details_desc"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_below="@+id/prod_details_desc"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:id="@+id/prod_details_price"
            android:layout_height="wrap_content"
            android:text="$88"/>


        <LinearLayout
            android:layout_below="@+id/prod_details_price"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/minus_img"
                android:src="@drawable/btn_background"
                android:id="@+id/btn_descrese_count"

                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text=" 33 "

                android:id="@+id/display_count"
                android:layout_height="wrap_content" />

            <ImageButton
                android:src="@drawable/btn_background"
                android:layout_width="30dp"
                android:background="@drawable/plus_img"
                android:layout_marginLeft="15dp"

                android:layout_alignRight="@+id/display_count"
                android:id="@+id/btn_increase_count"
                android:layout_height="30dp" />

        </LinearLayout>
        <Button
            android:id="@+id/button_apply"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Apply"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:gravity="center"


            />



        </RelativeLayout>





</LinearLayout>
